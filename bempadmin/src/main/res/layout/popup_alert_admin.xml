<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color45bbff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen20dp"
        android:layout_marginTop="@dimen/dimen20dp"
        android:layout_marginEnd="@dimen/dimen20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/tulisan16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen20dp"
        android:layout_marginBottom="@dimen/dimen20dp"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            style="android:Widget.Material.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen35dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border_colorff1f1f_rad4px"
            android:text="@string/batal"
            android:layout_marginEnd="@dimen/dimen20dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/tulisan16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOke"
            style="android:Widget.Material.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dimen20dp"
            android:background="@drawable/border_colorwhite_rad4px"
            android:text="@string/ok"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/tulisan16sp" />
    </LinearLayout>
</LinearLayout>