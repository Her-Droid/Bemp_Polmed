<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".view.activity.ProfilActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen0dp"
        android:layout_marginEnd="@dimen/dimen4dp"
        android:scrollbarSize="@dimen/dimen2dp"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@color/color45bbff"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen8dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTambahBerita"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen48dp"
                android:layout_marginTop="@dimen/dimen20dp"
                android:layout_marginStart="@dimen/dimen20dp"
                android:layout_marginEnd="@dimen/dimen16dp"
                app:cardBackgroundColor="@color/color45bbff"
                app:cardCornerRadius="@dimen/dimen5dp"
                app:cardElevation="@dimen/dimen0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen20dp"
                    android:layout_marginEnd="@dimen/dimen20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen16dp"
                        android:layout_height="@dimen/dimen16dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:background="@drawable/ic_news"
                        android:backgroundTint="@color/white"
                        android:contentDescription="@string/image" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/tambah_berita"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tulisan14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTambahLomba"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen48dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginStart="@dimen/dimen20dp"
                android:layout_marginEnd="@dimen/dimen16dp"
                app:cardBackgroundColor="@color/color45bbff"
                app:cardCornerRadius="@dimen/dimen5dp"
                app:cardElevation="@dimen/dimen0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen20dp"
                    android:layout_marginEnd="@dimen/dimen20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen16dp"
                        android:layout_height="@dimen/dimen16dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:background="@drawable/ic_lomba"
                        android:backgroundTint="@color/white"
                        android:contentDescription="@string/image" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/tambah_lomba"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tulisan14sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTambahPrestasi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen48dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginStart="@dimen/dimen20dp"
                android:layout_marginEnd="@dimen/dimen16dp"
                app:cardBackgroundColor="@color/color45bbff"
                app:cardCornerRadius="@dimen/dimen5dp"
                app:cardElevation="@dimen/dimen0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen20dp"
                    android:layout_marginEnd="@dimen/dimen20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen16dp"
                        android:layout_height="@dimen/dimen16dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:background="@drawable/ic_prestasi"
                        android:backgroundTint="@color/white"
                        android:contentDescription="@string/image" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/tambah_prestasi"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tulisan14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvStrukturOrganisasi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen48dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginStart="@dimen/dimen20dp"
                android:layout_marginEnd="@dimen/dimen16dp"
                app:cardBackgroundColor="@color/color45bbff"
                app:cardCornerRadius="@dimen/dimen5dp"
                app:cardElevation="@dimen/dimen0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen20dp"
                    android:layout_marginEnd="@dimen/dimen20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen16dp"
                        android:layout_height="@dimen/dimen16dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:background="@drawable/ic_organization"
                        android:backgroundTint="@color/white"
                        android:contentDescription="@string/image" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/struktur_organisasi"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tulisan14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSuperAdmin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen48dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginStart="@dimen/dimen20dp"
                android:layout_marginEnd="@dimen/dimen16dp"
                app:cardBackgroundColor="@color/color45bbff"
                app:cardCornerRadius="@dimen/dimen5dp"
                app:cardElevation="@dimen/dimen0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen20dp"
                    android:layout_marginEnd="@dimen/dimen20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen16dp"
                        android:layout_height="@dimen/dimen16dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:background="@drawable/ic_super_admin"
                        android:backgroundTint="@color/white"
                        android:contentDescription="@string/image" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/tambah_admin"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tulisan14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen48dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginStart="@dimen/dimen20dp"
                android:layout_marginEnd="@dimen/dimen16dp"
                app:cardBackgroundColor="@color/color45bbff"
                app:cardCornerRadius="@dimen/dimen5dp"
                app:cardElevation="@dimen/dimen0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen20dp"
                    android:layout_marginEnd="@dimen/dimen20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen16dp"
                        android:layout_height="@dimen/dimen16dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:background="@drawable/ic_password"
                        android:backgroundTint="@color/white"
                        android:contentDescription="@string/image" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/ubah_password"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tulisan14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTentangAplikasi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen48dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginStart="@dimen/dimen20dp"
                android:layout_marginEnd="@dimen/dimen16dp"
                app:cardBackgroundColor="@color/color45bbff"
                app:cardCornerRadius="@dimen/dimen5dp"
                app:cardElevation="@dimen/dimen0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen20dp"
                    android:layout_marginEnd="@dimen/dimen20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen16dp"
                        android:layout_height="@dimen/dimen16dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:background="@drawable/ic_about"
                        android:backgroundTint="@color/white"
                        android:contentDescription="@string/image" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/tentang_aplikasi"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tulisan14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvKeluar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen48dp"
                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginStart="@dimen/dimen20dp"
                android:layout_marginEnd="@dimen/dimen16dp"
                app:cardBackgroundColor="@color/color45bbff"
                app:cardCornerRadius="@dimen/dimen5dp"
                app:cardElevation="@dimen/dimen0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dimen20dp"
                    android:layout_marginEnd="@dimen/dimen20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dimen16dp"
                        android:layout_height="@dimen/dimen16dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:background="@drawable/ic_logout"
                        android:backgroundTint="@color/white"
                        android:contentDescription="@string/image" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/keluar"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tulisan14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconTint="@drawable/nav_bottom_change"
        app:itemTextColor="@drawable/nav_bottom_change"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>